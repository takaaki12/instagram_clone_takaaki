<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="stats">
        <%= render 'shared/stats' %>
      </section>
      <% if @users.any? %>
        <div class="user_avatars">
          <% @users.each do |user| %>
            <%= link_to gravatar_for(user, size: 30), user %>
          <% end %>
        </div>
      <% end %>
      <button class="btn btn-info">
      <%= link_to "Micropost Form", form_path %>
      </button>
    </aside>
    <div class="col-md-8">
      <h3>Micropost Feed</h3>
      <%= render 'shared/feed' %>
      <hr/>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <div class="welcomespace">
      <p class="welcome">Welcome to the Instagram Clone</p>
      <div><%= link_to "Sign up now!", signup_path, class: "btn  btn-info signup-btn" %></div>
      <div><%= link_to "Login as a guest user!", guest_path, method: :post, class: "btn  btn-success guest-login-btn" %></div>
    </div>
  </div>
<% end %>