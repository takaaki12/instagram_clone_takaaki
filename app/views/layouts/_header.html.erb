<header class="navbar navbar-fixed-top navbar-default">
  <div class="container">
    <%= link_to root_path, id: "logo" do %>
    <img src="https://fontmeme.com/permalink/200913/8d445f5d9edcb469ef48521bd494655b.png" alt="font-instagram" border="0">
    <% end %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if logged_in? %>
        <li class="navbar-form"><%= form_tag(search_path,:method => 'get') do %>
            <%= text_field_tag :search, "Posts search", {size:"15"} %>
            <% end %>
        </li>
          <li><%= render 'shared/circle' %></li>
        <li><%= link_to "Home", root_path %></li>
        <li><%= link_to "Me", current_user %></li>
        <% end %>
        <% if logged_in? %>
          <li><%= link_to "Users", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li><%= link_to "Log out", logout_path, method: :delete %></li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>